<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel Margin="10">

        <!-- Pasek z przyciskami -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Margin="0,0,0,10">
            <Button Content="Dodaj"
                    Width="80" Margin="0,0,10,0"
                    Click="AddButton_Click" />
            <Button Content="Usuń zaznaczone"
                    Width="120" Margin="0,0,10,0"
                    Click="DeleteButton_Click" />
            <Button Content="Zapisz"
                    Width="80" Margin="0,0,10,0"
                    Click="SaveButton_Click" />
            <Button Content="Wczytaj"
                    Width="80"
                    Click="LoadButton_Click" />
        </StackPanel>

        <!-- Tabela z danymi -->
        <DataGrid x:Name="QuestionsDataGrid"
                  ItemsSource="{Binding Questions}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}"
                                    IsReadOnly="True"
                                    Width="50" />
                <DataGridTextColumn Header="Tekst pytania"
                                    Binding="{Binding Text}"
                                    Width="*" />
                <DataGridTextColumn Header="Typ"
                                    Binding="{Binding QuestionType}"
                                    Width="100" />
            </DataGrid.Columns>

        </DataGrid>

    </DockPanel>
</Window>